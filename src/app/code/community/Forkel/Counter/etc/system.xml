<config>
    <tabs>
        <forkel_counter translate="label" module="forkel_counter">
            <label>Forkel Counter</label>
            <sort_order>9000</sort_order>
        </forkel_counter>
    </tabs>
    <sections>
        <forkel_counter translate="label" module="forkel_counter">
            <label>Forkel Counter</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>

                <general translate="label">
                    <label>General</label>
                    <frontend_type>select</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>

                        <options translate="label">
                            <label>Options</label>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                <p>
                                    <div>Set default options for the <i>countUp</i> plugin.</div>
                                </p>
                            ]]></comment>
                        </options>

                    </fields>
                </general>

                <css translate="label">
                    <label>CSS</label>
                    <frontend_type>select</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>

                        <default translate="label">
                            <label>Default</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                <p>
                                    <div>Load CSS <i>css/forkel/counter/counter.min.css</i> in front-end.</div>
                                </p>
                            ]]></comment>
                        </default>

                        <font_awesome translate="label">
                            <label>Font Awesome</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                <p>
                                    <div>Load Font Awesome from CDN in front-end. Disable if a Font Awesome file is already loaded.</div>
                                </p>
                            ]]></comment>
                        </font_awesome>

                    </fields>
                </css>

                <js translate="label">
                    <label>JavaScript</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>

                        <default translate="label">
                            <label>Default</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[
                                <p>
                                    <div>Load JavaScript <i>js/community/forkel/counter/init.min.js</i> and <i>js/community/forkel/counter/countUp.min.js</i> in front-end.</div>
                                </p>
                            ]]></comment>
                        </default>

                    </fields>
                </js>
            </groups>
        </forkel_counter>
    </sections>
</config>
